server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/a-birkett.co.uk;

    index index.html;

    server_name _;

    gzip on;
    gzip_types text/html text/css image/svg+xml;

    location / {
        try_files $uri $uri/ =404;
    }

    location ~* \.(css|svg|png|ico)$ {
        expires 7d;
        add_header Cache-Control "max-age=604800, public, no-transform";
    }
}
